<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_cluster_height">

    <sngular.com.atmsmap.presentation.util.OpenSansTextView
        android:id="@+id/address_first_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:textColor="@color/app_black"
        android:textSize="14sp" />

    <sngular.com.atmsmap.presentation.util.OpenSansTextView
        android:id="@+id/entity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/address_first_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="1"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:textAllCaps="true"
        android:textColor="@color/app_black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <sngular.com.atmsmap.presentation.util.OpenSansTextView
        android:id="@+id/address_second_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/address_first_text"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:textColor="@color/app_black"
        android:textSize="14sp" />

</RelativeLayout>