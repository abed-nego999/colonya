<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_map_closest_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_map_closest_height"
    android:background="@android:color/white"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/sombra_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <sngular.com.atmsmap.presentation.util.OpenSansTextView
                android:id="@+id/activity_map_closest_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_commssions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <sngular.com.atmsmap.presentation.util.OpenSansTextView
                android:id="@+id/activity_map_closest_commission_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/app_black"
                android:textSize="12sp" />

            <sngular.com.atmsmap.presentation.util.OpenSansTextView
                android:id="@+id/activity_map_closest_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:background="@android:color/transparent"
        android:id="@+id/btn_help"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:src="@drawable/ayuda" />

</RelativeLayout>